{
  "manifest_version": 3,
  "name": "ThinkBot",
  "version": "2.1.0",
  "description": "Detects MCQs on LMS pages and provides AI-powered answers.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://generativelanguage.googleapis.com/"
  ],
  "icons": {
    "48": "logo.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "ThinkBot",
    "default_icon" : "logo.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://lms2.cse.saveetha.in/*",
        "https://lms2.cse.saveetha.in/*",
        "http://lms2.ai.saveetha.in/*",
        "https://lms2.ai.saveetha.in/*",
        "http://lms.saveetha.in/*",
        "https://lms.saveetha.in/*",
        "http://training.saveetha.in/*",
        "https://training.saveetha.in/*"
      ],
      "js": ["content.js"],
      "css": ["popup.css"],
      "run_at": "document_idle"
    }
  ]
}
